# Основные настройки домена
DOMAIN_NAME=yourdomain.com
SUBDOMAIN=webapp
SSL_EMAIL=admin@yourdomain.com

# Генерируйте пароли командой: openssl rand -base64 32

# База данных PostgreSQL
POSTGRES_DB=telegram_webapp
POSTGRES_USER=webapp_user
POSTGRES_PASSWORD=your_super_strong_postgres_password_here

# Redis
REDIS_PASSWORD=your_redis_password_here

# JWT секрет для токенов
JWT_SECRET=your_jwt_secret_key_here

# Telegram Bot
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# pgAdmin
PGADMIN_EMAIL=admin@yourdomain.com
PGADMIN_PASSWORD=your_pgadmin_password_here

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here

# Аутентификация для мониторинга (Basic Auth)
# Генерируйте командой: echo $(htpasswd -nb admin your_password) | sed -e s/\\$/\\$\\$/g
TRAEFIK_AUTH=admin:$$2y$$10$$...your_bcrypt_hash_here
METRICS_AUTH=admin:$$2y$$10$$...your_bcrypt_hash_here

# Дополнительные настройки
GENERIC_TIMEZONE=Europe/Moscow
NODE_ENV=production 